{
  "name": "money-mapper-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:shared": "yarn workspace @money-mapper/shared build",

    "build:web": "yarn build:shared && yarn workspace @money-mapper/web build",
    "build:backend": "yarn build:shared && yarn workspace @money-mapper/backend build",

    "build": "yarn build:web",

    "dev:backend": "yarn workspace @money-mapper/backend dev",
    "dev:mobile": "yarn workspace @money-mapper/mobile start",

    "lint": "yarn workspaces run lint",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/.next packages/*/dist"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "next": "^16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  }
}
