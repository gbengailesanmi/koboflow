{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "dist/**"
      ],
    "env": [
      "NODE_ENV",
      "NEXT_PUBLIC_MONO_PUBLIC_KEY",
      "NEXT_PUBLIC_BACKEND_URL"
      ]
    },
    "dev": {
      "cache": false
    }
  }
}
