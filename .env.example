# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/consolidate_budget"

# Tink API Configuration
# Get these from https://console.tink.com after creating an application
TINK_CLIENT_ID="your_tink_client_id_here"
TINK_CLIENT_SECRET="your_tink_client_secret_here"

# Application Configuration
# Base URI for the application (no trailing slash)
BASE_URI="http://localhost"

# Port number for the application
PORT="3000"

# Security Configuration
# Generate a secure random string (minimum 32 characters)
# Use: openssl rand -hex 32
SESSION_SECRET="your_secure_session_secret_minimum_32_characters"

# NextAuth.js configuration
# Generate with: openssl rand -hex 32
NEXTAUTH_SECRET="your_nextauth_secret_here"

# Canonical URL for the application
NEXTAUTH_URL="http://localhost:3000"

# Environment (development, production, test)
NODE_ENV="development"

# Optional: Monitoring and Analytics
# Uncomment and configure if using these services

# Error tracking with Sentry
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Logging level (error, warn, info, debug)
# LOG_LEVEL="info"

# Vercel Analytics (if deploying to Vercel)
# VERCEL_ANALYTICS_ID="your_analytics_id"

# Database optimization (optional)
# DATABASE_POOL_SIZE="20"
# DATABASE_TIMEOUT="60000"

# API configuration (optional)
# API_RATE_LIMIT="200"
# TINK_API_TIMEOUT="45000"