{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "types": ["node", "express"],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],

    "paths": {
      "@money-mapper/shared": ["../shared/dist"],
      "@money-mapper/shared/*": ["../shared/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
