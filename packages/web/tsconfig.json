{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",

    "lib": ["dom", "dom.iterable", "esnext"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "preserve",

    "noEmit": true,
    "incremental": true,

    "plugins": [
      {
        "name": "next"
      }
    ],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
