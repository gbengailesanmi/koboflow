{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@koboflow/shared": ["../shared/src"]
    }
  },
  "include": ["src/**/*", "App.tsx"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../shared" }
  ]
}
